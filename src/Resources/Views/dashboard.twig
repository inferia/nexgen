{% extends 'App/Main.twig' %}

{% block content %}
    <div class="ui three column grid">
        <div class="column">
            <div class="ui card fluid">
                <div class="image">
                    <img src="../assets/images/undraw_add_notes_8cfw.svg" alt="" srcset="" class="card-img-top">
                </div>
                <div class="content">
                    <h1 class="header">Add Questions</h1>
                </div>
                <div class="extra content">
                    <a href="/question/create" class="ui primary fluid button">Let's Go</a>
                </div>
            </div>
        </div>
        <div class="column">
            <div class="ui card fluid">
                <div class="image">
                    <img src="../assets/images/undraw_content_creator_xeju.svg" alt="" srcset=""
                        class="card-img-top">
                </div>
                <div class="content">
                    <h1 class="header">Create Question Paper</h1>
                </div>
                <div class="extra content">
                    <a href="/question/paper/create" class="ui primary fluid button">Generate</a>
                </div>
            </div>
        </div>
        <div class="column">
            <div class="ui card fluid">
                <div class="image">
                    <img src="../assets/images/undraw_File_bundle_xl7g.svg" alt="" srcset="" class="card-img-top">
